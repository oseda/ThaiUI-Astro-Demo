---
import Nav from '../components/Nav.astro';
import ButtonMode from './ButtonMode.astro';
import ButtonSize from './ButtonSize.astro';
const SiteTitle = 'ไทยยูไอ';
---

<header id='head'>
  <div class='th-container'>
    <a href='/' class='title' title='Home'>
      <strong>{SiteTitle}</strong>
    </a>
    <small class='_desktop'>ตัวอย่างเทมเพลตเว็บภาษาไทยในรูปแบบ Astro</small>
    <div class='action'>
      <ButtonMode />
      <ButtonSize />
    </div>
  </div>
</header>
<Nav />

<style lang='scss'>
  header {
    padding: 1rem 0;
    background-color: var(--th-head-bg);
    color: var(--th-head-text);
    line-height: 1.2;
    border-bottom: 3px solid var(--th-nav-bg);
    position: sticky;
    top: 0;
    @media (min-width: 1024px) {
      padding: 1.25rem 0;
      position: unset;
      border-bottom: none;
    }
  }
  .th-container {
    align-items: center;
    display: flex;
    gap: 1rem;
  }
  .title {
    font-size: 1.6em;
    @media (min-width: 1024px) {
      font-size: 2.4em;
    }
  }
  small {
    font-size: 0.9em;
    opacity: 0.8;
    padding-top: 0.2em;
  }
  .action {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 1rem;
    @media (max-width: 1023px) {
      padding-right: 80px;
    }
  }
</style>
<script>
  import '../scripts/nav.js';
</script>
